rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Pozwól na odczyt plików wszystkim użytkownikom
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Pozwól na zapis tylko zalogowanym użytkownikom
    match /courses/{courseId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Pozwól na zapis zadań tylko zalogowanym użytkownikom
    match /assignments/{courseId}/{sectionId}/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Pozwól na odczyt zadań tylko zalogowanym użytkownikom
    match /assignments/{courseId}/{sectionId}/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Załączniki czatu grupowego - tylko zalogowani, limit rozmiaru 20 MB
    match /groupChats/{chatId}/attachments/{fileName} {
      allow write: if request.auth != null && request.resource.size < 20 * 1024 * 1024; // 20MB
      allow read: if true;
    }
  }
} 